# Mental Health Crisis Detection System - Environment Configuration

# =============================================================================
# APPLICATION SETTINGS
# =============================================================================
DEBUG=false
APP_NAME="Mental Health Crisis Detector"
APP_VERSION="2.0.0"
API_HOST=0.0.0.0
API_PORT=8000
API_WORKERS=4

# =============================================================================
# DATABASE CONFIGURATION
# =============================================================================
# PostgreSQL Database
DATABASE_URL=postgresql://postgres:password@localhost:5432/crisis_detector

# Redis Cache
REDIS_URL=redis://localhost:6379

# MongoDB (Optional - for document storage)
MONGODB_URL=mongodb://localhost:27017/crisis_detector

# =============================================================================
# SECURITY SETTINGS
# =============================================================================
# JWT Secret Key (CHANGE IN PRODUCTION!)
SECRET_KEY=your-super-secret-key-change-in-production-please

# Token Expiration
ACCESS_TOKEN_EXPIRE_MINUTES=30
REFRESH_TOKEN_EXPIRE_DAYS=7

# Rate Limiting
RATE_LIMIT_PER_MINUTE=60
RATE_LIMIT_BURST=10

# Password Requirements
MIN_PASSWORD_LENGTH=8
REQUIRE_SPECIAL_CHARS=true
REQUIRE_NUMBERS=true
REQUIRE_UPPERCASE=true

# =============================================================================
# MODEL CONFIGURATION
# =============================================================================
# Model Settings
USE_BERT=true
USE_SPACY=true
USE_MULTIMODAL=true
USE_ENSEMBLE=true

# Model Paths
MODEL_CACHE_DIR=models
DATA_DIR=data

# Text Processing
MAX_TEXT_LENGTH=512
CONFIDENCE_THRESHOLD=0.5
BATCH_SIZE=32
MAX_WORKERS=4

# Model Training
TRAINING_BATCH_SIZE=16
LEARNING_RATE=2e-5
NUM_EPOCHS=3
VALIDATION_SPLIT=0.2

# =============================================================================
# MONITORING AND OBSERVABILITY
# =============================================================================
# Monitoring
ENABLE_MONITORING=true
PROMETHEUS_PORT=9090
GRAFANA_PORT=3000

# Logging
LOG_LEVEL=INFO
LOG_FILE=logs/crisis_detector.log
LOG_FORMAT=json

# Sentry (Error Tracking)
SENTRY_DSN=
SENTRY_ENVIRONMENT=production

# Health Checks
HEALTH_CHECK_INTERVAL=30
HEALTH_CHECK_TIMEOUT=10

# =============================================================================
# ALERTING CONFIGURATION
# =============================================================================
# Email Alerts
SMTP_HOST=smtp.gmail.com
SMTP_PORT=587
SMTP_USERNAME=
SMTP_PASSWORD=
SMTP_USE_TLS=true

# SMS Alerts (Twilio)
TWILIO_ACCOUNT_SID=
TWILIO_AUTH_TOKEN=
TWILIO_PHONE_NUMBER=

# Webhook Alerts
WEBHOOK_URL=
WEBHOOK_SECRET=

# Emergency Contacts
EMERGENCY_EMAIL=admin@crisis-detector.com
EMERGENCY_PHONE=+1234567890

# =============================================================================
# CACHING CONFIGURATION
# =============================================================================
# Redis Cache Settings
CACHE_TTL=3600
CACHE_MAX_SIZE=1000
CACHE_PREFIX=crisis_detector

# Model Caching
MODEL_CACHE_TTL=86400
FEATURE_CACHE_TTL=3600

# =============================================================================
# EXTERNAL SERVICES
# =============================================================================
# Hugging Face
HUGGINGFACE_API_TOKEN=

# OpenAI (Optional)
OPENAI_API_KEY=

# Google Cloud (Optional)
GOOGLE_CLOUD_PROJECT_ID=
GOOGLE_CLOUD_CREDENTIALS_PATH=

# AWS (Optional)
AWS_ACCESS_KEY_ID=
AWS_SECRET_ACCESS_KEY=
AWS_REGION=us-east-1

# =============================================================================
# DEPLOYMENT SETTINGS
# =============================================================================
# Environment
ENVIRONMENT=production

# Docker
DOCKER_REGISTRY=your-registry.com
DOCKER_IMAGE_TAG=latest

# Kubernetes
KUBERNETES_NAMESPACE=crisis-detector
KUBERNETES_CLUSTER=production

# Load Balancing
LOAD_BALANCER_HOST=api.crisis-detector.com
LOAD_BALANCER_PORT=443
LOAD_BALANCER_SSL=true

# =============================================================================
# FEATURE FLAGS
# =============================================================================
# Feature Toggles
ENABLE_BATCH_PROCESSING=true
ENABLE_REAL_TIME_ALERTS=true
ENABLE_MODEL_EXPLANATIONS=true
ENABLE_AUDIT_LOGGING=true
ENABLE_RATE_LIMITING=true
ENABLE_AUTHENTICATION=true

# Advanced Features
ENABLE_A_B_TESTING=false
ENABLE_MODEL_ENSEMBLE=true
ENABLE_FEATURE_ENGINEERING=true
ENABLE_AUTO_RETRAINING=false

# =============================================================================
# PERFORMANCE SETTINGS
# =============================================================================
# Async Settings
ASYNC_WORKERS=4
ASYNC_TIMEOUT=30

# Memory Management
MAX_MEMORY_USAGE=80
GARBAGE_COLLECTION_INTERVAL=300

# Database Connection Pool
DB_POOL_SIZE=10
DB_MAX_OVERFLOW=20
DB_POOL_TIMEOUT=30

# =============================================================================
# DEVELOPMENT SETTINGS
# =============================================================================
# Development Mode
DEV_MODE=false
DEBUG_SQL=false
DEBUG_REQUESTS=false

# Testing
TEST_DATABASE_URL=postgresql://postgres:password@localhost:5432/crisis_detector_test
TEST_REDIS_URL=redis://localhost:6379/1

# Code Quality
ENABLE_LINTING=true
ENABLE_TYPE_CHECKING=true
ENABLE_SECURITY_SCANNING=true

# =============================================================================
# BACKUP AND RECOVERY
# =============================================================================
# Backup Settings
BACKUP_ENABLED=true
BACKUP_INTERVAL=24
BACKUP_RETENTION_DAYS=30
BACKUP_STORAGE_PATH=/backups

# Recovery
RECOVERY_MODE=false
RECOVERY_CHECKPOINT=

# =============================================================================
# COMPLIANCE AND PRIVACY
# =============================================================================
# Data Privacy
ENABLE_DATA_ANONYMIZATION=true
DATA_RETENTION_DAYS=365
ENABLE_GDPR_COMPLIANCE=true

# Audit
AUDIT_LOG_ENABLED=true
AUDIT_LOG_RETENTION_DAYS=2555
AUDIT_LOG_ENCRYPTION=true

# Compliance
HIPAA_COMPLIANCE=false
SOC2_COMPLIANCE=false
ISO27001_COMPLIANCE=false

# =============================================================================
# INTEGRATION SETTINGS
# =============================================================================
# Third-party Integrations
ENABLE_SLACK_INTEGRATION=false
SLACK_WEBHOOK_URL=

ENABLE_TEAMS_INTEGRATION=false
TEAMS_WEBHOOK_URL=

ENABLE_DISCORD_INTEGRATION=false
DISCORD_WEBHOOK_URL=

# =============================================================================
# CUSTOM SETTINGS
# =============================================================================
# Custom Configuration
CUSTOM_MODEL_PATH=
CUSTOM_FEATURES_ENABLED=false
CUSTOM_ALGORITHMS_ENABLED=false

# Advanced Configuration
ADVANCED_LOGGING=false
ADVANCED_MONITORING=false
ADVANCED_ANALYTICS=false

# =============================================================================
# NOTES
# =============================================================================
# 1. Change all default passwords and secrets in production
# 2. Use environment-specific values for different deployments
# 3. Keep sensitive information in secure secret management systems
# 4. Regularly rotate API keys and tokens
# 5. Monitor and audit all configuration changes
